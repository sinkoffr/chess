<h1>move your piece</h1>

<table id="chessboard-2" class="chessboard">
  <!-- 1, 8 = top left -->
  <% (1..8).to_a.reverse.each do |i| %>
    <tr>
      <% (1..8).each do |j| %>
        <td data-y-pos="" data-x-pos="<%= j %>">
          <%= link_to "Move this piece", edit_game_piece_path(:game_id) %>

          <%# "(#{i}, #{j})" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>